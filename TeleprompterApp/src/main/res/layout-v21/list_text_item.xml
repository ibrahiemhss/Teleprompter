<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/item_side_margin"
    android:layout_marginRight="@dimen/item_side_margin"
    android:layout_marginTop="@dimen/item_bottom_margin"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="@dimen/card_elevation">


    <LinearLayout
        android:id="@+id/lin_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_margin"
        android:background="?android:attr/selectableItemBackground"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_note"
            android:layout_width="@dimen/item_image_height"
            android:layout_height="@dimen/item_image_width"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/app_name"
            android:src="@drawable/note_2_256" />

        <TextView
            android:id="@+id/text_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_side_margin"
            android:layout_marginRight="@dimen/item_text_side_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/item_text_title_size" />


        <ImageView
            android:id="@+id/edit_item"
            android:layout_width="@dimen/item_image_edit_height"
            android:layout_height="@dimen/item_image_edit_width"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/item_image_padding"
            android:src="@drawable/edit_item" />

    </LinearLayout>


</androidx.cardview.widget.CardView>