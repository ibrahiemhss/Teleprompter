<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidDomInspection -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_graylt">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="@dimen/list_width"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/list_bottom_padding"
            android:paddingLeft="@dimen/list_side_padding"
            android:paddingRight="@dimen/list_side_padding"
            android:contentDescription="@string/list_description"
            android:scrollbarStyle="outsideOverlay" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:background="@color/color_graylt"
            android:layout_marginEnd="@dimen/banner_start_margin"
            android:layout_height="wrap_content">
            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:background="@color/color_graylt"
                android:layout_height="wrap_content"
                ads:adSize="FLUID"
                ads:adUnitId="@string/banner_pup" />
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="230dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:contentDescription="@string/f_add_description"
        android:src="@drawable/ic_add_white"
        android:visibility="invisible"
        app:backgroundTint="@color/color_fab_add"
        app:elevation="@dimen/fab_elevation"
        app:pressedTranslationZ="@dimen/fab_press_translation_z" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="160dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:contentDescription="@string/f_storage_description"
        android:src="@drawable/ic_folder_open"
        android:visibility="invisible"
        app:backgroundTint="@color/color_fab_storage"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:contentDescription="@string/f_drive_description"
        android:src="@drawable/ic_cloud_download"
        android:visibility="invisible"
        app:backgroundTint="@color/color_fab_cloud"
        app:elevation="@dimen/fab_elevation"
        app:pressedTranslationZ="@dimen/fab_press_translation_z" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="@string/f_parent_description"
        android:src="@drawable/ic_add_white"
        ads:ignore="RelativeOverlap"
        app:backgroundTint="@color/orange_light"
        app:elevation="@dimen/fab_elevation"
        app:pressedTranslationZ="@dimen/fab_press_translation_z" />



</RelativeLayout>