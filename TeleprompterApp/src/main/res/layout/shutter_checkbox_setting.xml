<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resolPrefParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/checkboxTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/photoResLeftMargin"
        android:layout_marginStart="@dimen/photoResLeftMargin"
        android:layout_marginTop="@dimen/photoResSummaryTopBottomMargin"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/photoResTitleSize"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkboxSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/photoResSummaryTopBottomMargin"
        android:layout_marginEnd="@dimen/photoResLeftMargin"
        android:layout_marginStart="5dp"
        android:layout_marginTop="@dimen/photoResSummaryTopBottomMargin"
        android:buttonTint="@color/colorAccent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="Checkbox"
        android:background="@drawable/accent_border_back"
        android:textColor="@color/colorPrimaryText" />

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lime_green"
        android:orientation="horizontal"
        android:visibility="gone"></LinearLayout>

</LinearLayout>